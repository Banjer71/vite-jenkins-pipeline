pipeline {
    agent any

    tools {
        nodejs "node18" 
    }

    environment {
        GITHUB_TOKEN = credentials('github-token')   // Jenkins secret text credential ID
        REPO = "github.com/Banjer71/vite-jenkins-pipeline"
        BRANCH = "gh-pages"
        // Optionally set CUSTOM_DOMAIN = "mydomain.com" if you want Jenkins to write CNAME
    }

    stage('Check Node') {
        steps {
            sh 'node -v'
            sh 'npm -v'
        }
    }

    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm ci'   // faster and more reproducible than npm install in CI
            }
        }

        stage('Build Vite app') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Prepare deployment folder') {
            steps {
                sh '''
                    rm -rf deploy
                    mkdir deploy
                    cp -R dist/* deploy/
                    # If you use a custom domain, uncomment and set CUSTOM_DOMAIN above
                    # echo "${CUSTOM_DOMAIN}" > deploy/CNAME
                '''
            }
        }

        stage('Deploy to GitHub Pages') {
            steps {
                sh '''
                    cd deploy
                    git init
                    git config user.name "Jenkins CI"
                    git config user.email "jenkins@example.com"
                    git add -A
                    git commit -m "Deploy from Jenkins - ${BUILD_NUMBER}" || true

                    # Force push deploy content to gh-pages branch
                    git branch -M main
                    git remote add origin https://${GITHUB_TOKEN}@${REPO}
                    git push --force origin main:${BRANCH}
                '''
            }
        }
    }
}
